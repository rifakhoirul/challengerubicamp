<% include partial/header.ejs %> 
    <h1>BREAD (Browse, Read, Edit, Add, Delete)</h1>
    <h2>Filters</h2>
    <form action="" method="get">
        <div class="containercheck">
            <input type="checkbox" id="IDcheck" name="IDcheck" value="IDcheck" <%=filter.IDcheck ? "checked" :"" %>>
            <label for="ID" style="width: 150px;">ID</label>
            <input type="number" id="IDfilter" name="IDfilter" placeholder="ID" size="20px" style="height:fit-content;"
                value=<%=filter.IDfilter %>>
            <br>
        </div>
        <div class="containercheck">
            <input type="checkbox" id="stringcheck" name="stringcheck" value="stringcheck" <%=filter.stringcheck
                ? "checked" :"" %>>
            <label for="stringcheck" style="width: 150px;">String</label>
            <input type="text" id="stringfilter" name="stringfilter" placeholder="String" value=<%=filter.stringfilter
                %>>
            <br>
        </div>
        <div class="containercheck">
            <input type="checkbox" id="integercheck" name="integercheck" value="integercheck" <%=filter.integercheck
                ? "checked" :"" %>>
            <label for="integercheck" style="width: 150px;">Integer</label>
            <input type="number" id="integerfilter" name="integerfilter" placeholder="Integer"
                value=<%=filter.integerfilter %>>
            <br>
        </div>
        <div class="containercheck">
            <input type="checkbox" id="floatcheck" name="floatcheck" value="floatcheck" <%=filter.floatcheck ? "checked"
                :"" %>>
            <label for="floatcheck" style="width: 150px;">Float</label>
            <input type="number" id="floatfilter" name="floatfilter" placeholder="Float" step="any"
                value=<%=filter.floatfilter %>>
            <br>
        </div>

        <div class="containerdate" style="width: 100%;">
            <div style="width: 200px; margin-top: 20px;">
                <input type="checkbox" id="datecheck" name="datecheck" value="datecheck" <%=filter.datecheck ? "checked"
                    :"" %>>
                <label for="datecheck" style="width: 11.3%;">Date</label>
            </div>
            <div style="width: 100%;">
                <input placeholder="Start date" type="text" onfocus="(this.type='date')" id="datefilter"
                    name="datefilter" value=<%=filter.datefilter %>>
                <p style="margin: 5px 0;">to</p>
                <input placeholder="End date" type="text" onfocus="(this.type='date')" id="datefilter2"
                    name="datefilter2" value=<%=filter.datefilter2 %>>
            </div>
        </div>

        <div class="containercheck">
            <input type="checkbox" id="booleancheck" name="booleancheck" value="booleancheck" <%=filter.booleancheck
                ? "checked" :"" %>>
            <label for="booleancheck" style="width: 150px;">Boolean</label>
            <select id="booleanfilter" name="booleanfilter">
                <option value="" disabled selected>Choose the boolean ...</option>
                <option value="true" <%=filter.booleanfilter=='true' ? "selected" : "" %>>true</option>
                <option value="false" <%=filter.booleanfilter=='false' ? "selected" : "" %>>false</option>
            </select>
            <br>
        </div>
        <button type="submit" class="blue-button">Search</button>
        <a href="/" class="yellow-button">Reset</a>
    </form>
    <br><br>
    <table>
        <thead>
            <tr>
                <th>ID <a href="?<%=url%>idasc&">▲</a><a href="?<%=url%>iddesc&">▼</a></th>
                <th>String <a href="?<%=url%>stringasc&">▲</a><a href="?<%=url%>stringdesc&">▼</a></th>
                <th>Integer <a href="?<%=url%>integerasc&">▲</a><a href="?<%=url%>integerdesc&">▼</a></th>
                <th>Float <a href="?<%=url%>floatasc&">▲</a><a href="?<%=url%>floatdesc&">▼</a></th>
                <th>Date <a href="?<%=url%>dateasc&">▲</a><a href="?<%=url%>datedesc&">▼</a></th>
                <th>Boolean <a href="?<%=url%>booleanasc&">▲</a><a href="?<%=url%>booleandesc&">▼</a></th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% data.forEach((item, index)=>{ %>
                <tr>
                    <td>
                        <%= index + offset +1 %>
                    </td>
                    <td>
                        <%= item.stringdb %>
                    </td>
                    <td>
                        <%= item.integerdb %>
                    </td>
                    <td>
                        <%= item.floatdb %>
                    </td>
                    <td>
                        <%= item.datedb %>
                    </td>
                    <td>
                        <%= item.booleandb %>
                    </td>
                    <td>
                        <a class="green-button" href="/edit/<%= index + offset %>">Edit</a>
                        <a class="red-button" href="/delete/<%= data[index].id %>">Delete</a>
                    </td>
                </tr>
                <% }) %>
        </tbody>
    </table>
    <br>
    <div class="pagination">
        <a href="?<%=url%>page=<%= currentpage-1 %>" class=<%=currentpage==1 ? "disabled" :"" %> >Previous</a>
        <% for( let i=1; i <=totalpage; i++ ) { %>
            <a href="?<%=url%>page=<%= i %>" class="btn-page">
                <%= i %>
            </a>
            <% } %>
                <a href="?<%=url%>page=<%= currentpage + 1%>" class=<%=currentpage==totalpage ? "disabled" : "" %> >Next</a>
    </div>
    <br><br>
    <a class="blue-button" href="/add">Add</a>
    <br><br>


<% include partial/footer.ejs %> 