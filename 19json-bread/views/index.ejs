<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Challange 19 (json-bread)</title>
    <style>
        input[type=text],
        input[type=number],
        input[type=date],
        select {
            -moz-appearance: textfield;
            width: 90%;
            padding: 13px 20px;
            margin: 8px 0;
            display: inline-block;
            border: 1px solid #ccc;
            border-radius: 4px;
            box-sizing: border-box;
        }

        #datefilter,
        #datefilter2 {
            max-width: 200px;

        }

        .containerdate {
            display: flex;
        }

        input::-webkit-outer-spin-button,
        input::-webkit-inner-spin-button {
            -webkit-appearance: none;
            margin: 0;
        }

        h1,
        h2 {
            font-family: 'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif;
        }

        body {
            padding: 30px 50px;
        }

        form {
            font-family: 'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif;
        }

        form .containercheck {
            display: flex;
            margin: 2px;
            align-items: center;
        }

        table {
            font-family: Arial, Helvetica, sans-serif;
            border-collapse: collapse;
            width: 100%;
        }

        td,
        th {
            text-align: left;
            padding: 8px;
            border: 1px solid #ddd;
            border-left-color: transparent;
            border-right-color: transparent;
            padding-top: 13px;
            padding-bottom: 13px;
        }

        tr:nth-child(odd) {
            background-color: #f2f2f2;
        }

        tr:hover {
            background-color: #ddd;
        }

        th {
            padding-top: 13px;
            padding-bottom: 13px;
            text-align: left;
            background-color: white;
            color: black;
        }

        table a {
            text-decoration: none;
            color: black;
            border: 1px solid;
            padding: 3px;
            border-radius: 5px;

        }

        .blue-button {
            font-family: Arial, Helvetica, sans-serif;
            width: 6%;
            background-color: rgb(7, 101, 201);
            color: white;
            padding: 7px 10px;
            margin: 8px 0;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            font-size: 100%;
            text-decoration: none;
        }

        .red-button {
            width: 100%;
            background-color: red;
            color: white;
            padding: 7px 10px;
            margin: 8px 0;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            font-size: 90%;
        }

        .green-button {
            width: 100%;
            background-color: #4CAF50;
            color: white;
            padding: 7px 10px;
            margin: 8px 0;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            font-size: 90%;
        }

        .pagination {
            display: inline-block;
            font-family: 'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif;
        }

        .pagination a {
            color: black;
            float: left;
            padding: 8px 16px;
            text-decoration: none;
            border: 1px solid #ddd;
            color: rgb(7, 101, 201)
        }

        .pagination a:hover:not(.active) {
            background-color: #ddd;
        }

        .pagination a:first-child {
            border-top-left-radius: 5px;
            border-bottom-left-radius: 5px;
        }

        .pagination a:last-child {
            border-top-right-radius: 5px;
            border-bottom-right-radius: 5px;
        }
    </style>
</head>

<body>
    <h1>BREAD (Browse, Read, Edit, Add, Delete)</h1>
    <h2>Filters</h2>
    <form action="" method="get">
        <div class="containercheck">
            <input type="checkbox" id="IDcheck" name="IDcheck" value="IDcheck">
            <label for="ID" style="width: 150px;">ID</label>
            <input type="number" id="IDfilter" name="IDfilter" placeholder="ID" size="20px" style="height:fit-content;">
            <br>
        </div>
        <div class="containercheck">
            <input type="checkbox" id="stringcheck" name="stringcheck" value="stringcheck">
            <label for="stringcheck" style="width: 150px;">String</label>
            <input type="text" id="stringfilter" name="stringfilter" placeholder="String">
            <br>
        </div>
        <div class="containercheck">
            <input type="checkbox" id="integercheck" name="integercheck" value="integercheck">
            <label for="integercheck" style="width: 150px;">Integer</label>
            <input type="number" id="integerfilter" name="integerfilter" placeholder="Integer">
            <br>
        </div>
        <div class="containercheck">
            <input type="checkbox" id="floatcheck" name="floatcheck" value="floatcheck">
            <label for="floatcheck" style="width: 150px;">Float</label>
            <input type="number" id="floatfilter" name="floatfilter" placeholder="Float" step="any">
            <br>
        </div>

        <div class="containerdate" style="width: 100%;">
            <div style="width: 200px; margin-top: 20px;">
                <input type="checkbox" id="datecheck" name="datecheck" value="datecheck">
                <label for="datecheck" style="width: 11.3%;">Date</label>
            </div>
            <div style="width: 100%;">
                <input placeholder="Start date" type="text" onfocus="(this.type='date')" id="datefilter"
                    name="datefilter">
                <p style="margin: 5px 0;">to</p>
                <input placeholder="End date" type="text" onfocus="(this.type='date')" id="datefilter2"
                    name="datefilter2">
            </div>
        </div>

        <div class="containercheck">
            <input type="checkbox" id="booleancheck" name="booleancheck" value="booleancheck">
            <label for="booleancheck" style="width: 150px;">Boolean</label>
            <select id="booleanfilter" name="booleanfilter">
                <option value="" disabled selected>Choose the boolean ...</option>
                <option value="true">true</option>
                <option value="false">false</option>
            </select>
            <br>
        </div>
        <button type="submit" class="blue-button">Search</button>
    </form>
    <br><br>
    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>String</th>
                <th>Integer</th>
                <th>Float</th>
                <th>Date</th>
                <th>Boolean</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% data.forEach((item, index)=>{ %>
                <tr>
                    <td>
                        <%= index + offset +1 %>
                    </td>
                    <td>
                        <%= item.string %>
                    </td>
                    <td>
                        <%= item.integer %>
                    </td>
                    <td>
                        <%= item.float %>
                    </td>
                    <td>
                        <%= item.date %>
                    </td>
                    <td>
                        <%= item.boolean %>
                    </td>
                    <td>
                        <a class="green-button" href="/edit/<%= index %>">Edit</a>
                        <a class="red-button" href="/delete/<%= index %>">Delete</a>
                    </td>
                </tr>
                <% }) %>
        </tbody>
    </table>
    <br>
    <div class="pagination">
        <a href="?page=<%= currentpage - 1%>">Previous</a>
        <% for( let i=1; i <=totalpage; i++ ) { %>
            <a href="?page=<%= i %>" class="btn-page">
                <%= i %>
            </a>
            <% } %>
                <a href="?page=<%= currentpage + 1%>">Next</a>
    </div>
    <br><br>
    <a class="blue-button" href="/add">Add</a>
    <br><br>
</body>
<script>
    console.log(window.location.href.split("page=").pop());
    let btnPage = document.querySelectorAll(".btn-page")
    btnPage.forEach(element => {
        if (window.location.href.includes("page=")) {
            if (element.textContent.trim() == window.location.href.split("page=").pop()) {
                element.style.background = "rgb(7, 101, 201)";
                element.style.color = "white"
            }
        } else {
            btnPage[0].style.background = "rgb(7, 101, 201)";
            btnPage[0].style.color = "white"
        }


    })
</script>

</html>